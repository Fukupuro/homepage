---
import type { ImageMetadata } from "astro";
import Image from "astro/components/Image.astro";
import DefaultImage from "@/assets/images/default-image.jpeg";

type Props = {
	src?: string | ImageMetadata;
	title: string;
};

const { src, title } = Astro.props as Props;
---

{typeof src === "string" ? (
  <Image src={src} alt={`${title}のサムネイル`} width={320} height={160} />
) : (
  <Image src={DefaultImage} alt={`${title}のサムネイル`} width={320} height={160} />
)}

<style>
  img {
    @apply object-cover w-40 h-40 flex-shrink-0 sm:w-80 sm:h-40;
  }
</style>