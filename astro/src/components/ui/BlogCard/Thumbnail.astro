---
import Image from "astro/components/Image.astro";
import DefaultImage from "@/assets/images/default-image.jpeg";

type Props = {
	src?: string;
	title: string;
};

const { src, title } = Astro.props as Props;
---

{src ? (
  <Image src={src as string} alt={`${title}のサムネイル`} width={320} height={160} />
) : (
  <Image src={DefaultImage} alt={`${title}のサムネイル`} width={320} height={160} />
)}

<style>
  img {
    @apply object-cover w-40 h-40 flex-shrink-0 md:w-80 md:h-40;
  }
</style>