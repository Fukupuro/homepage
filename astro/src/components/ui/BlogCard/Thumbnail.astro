---
import Image from "astro/components/Image.astro";
import { blogCardStyles } from "./styles";

type Props = {
	src?: string;
	title: string;
};

const { src, title } = Astro.props as Props;
---

{
  <Image
    src={src ?? "/images/default-thumbnail.jpg"}
    alt={`${title}のサムネイル`}
    width={720}
    height={400}
    class={blogCardStyles.thumbnail}
  />
}

