---
import { Icon } from "astro-icon/components";
import { PATH } from "@/constants";

type Props = {
	tags: string[];
	bgColor?: string;
};

const { tags, bgColor = "bg-gray-100" } = Astro.props as Props;
---

<div class={`mt-2 flex flex-wrap gap-2`}>
  {tags.map((tag) => (
    <a
      href={`${PATH.BLOGS}?q=tag:${encodeURIComponent(tag)}`}
      class={`flex items-center rounded-full px-2 py-1 ${bgColor}`}
    >
      <Icon name="ri:hashtag" />
      <span class="text-gray-500 text-sm">{tag}</span>
    </a>
  ))}
</div>
