<div class="rounded-xl border border-gray-200 bg-white shadow-sm overflow-hidden hover:shadow-md transition-shadow h-full flex flex-col">
  <%# --- Thumbnail --- %>
  <% if blog.header_image.attached? %>
    <%= image_tag blog.header_image, class: "w-full h-48 object-cover", alt: blog.title %>
  <% else %>
    <div class="w-full h-48 bg-gradient-to-br from-blue-50 to-gray-100 flex items-center justify-center">
      <svg class="h-12 w-12 text-gray-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
        <path stroke-linecap="round" stroke-linejoin="round" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
      </svg>
    </div>
  <% end %>

  <%# --- Card body --- %>
  <div class="p-6 flex flex-col flex-1">
    <%# Date %>
    <p class="text-sm text-gray-500 mb-2">
      <%= blog.published_at&.strftime("%Y/%m/%d") || "公開日未設定" %>
    </p>

    <%# Title %>
    <h3 class="text-lg font-bold text-gray-800 leading-snug mb-5 line-clamp-2 group-hover:text-blue-500 transition-colors">
      <%= blog.title %>
    </h3>

    <%# Tags %>
    <% if blog.tags.any? %>
      <div class="flex flex-wrap gap-2.5 mt-auto">
        <% blog.tags.each do |tag| %>
          <span class="inline-flex items-center rounded-md border border-gray-300 bg-white px-3 py-1 text-sm text-gray-700">
            <%= tag.name %>
          </span>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
