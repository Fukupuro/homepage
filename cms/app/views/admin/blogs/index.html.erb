<div class="min-h-screen bg-gray-50">
  <%# ===== Header ===== %>
  <div class="bg-white border-b border-gray-200">
    <div class="mx-auto max-w-6xl flex items-center justify-between px-10 py-6">
      <h1 class="text-2xl font-bold text-gray-800">
        <span class="text-blue-500 mr-1">#</span>ブログ管理
      </h1>
      <%= link_to new_admin_blog_path,
            class: "inline-flex items-center gap-2 rounded-lg bg-blue-500 px-6 py-2.5 font-semibold text-white hover:bg-blue-600 transition-colors" do %>
        <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
        </svg>
        新規作成
      <% end %>
    </div>
  </div>

  <%# ===== Flash ===== %>
  <% if notice.present? %>
    <div class="mx-auto mt-8 max-w-6xl px-10">
      <div class="rounded-lg bg-green-50 border border-green-200 px-5 py-4 text-green-700">
        <%= notice %>
      </div>
    </div>
  <% end %>

  <%# ===== Content ===== %>
  <div class="mx-auto max-w-6xl px-10 py-12">
    <% if @blogs.any? %>
      <p class="text-sm text-gray-400 mb-8 text-center"><%= @total_count %>件の記事</p>

      <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3 justify-items-center">
        <% @blogs.each do |blog| %>
          <%= link_to admin_blog_path(blog), class: "block group w-full" do %>
            <%= render "index_card", blog: blog %>
          <% end %>
        <% end %>
      </div>

      <%= render "pagination", current_page: @page, total_pages: @total_pages %>
    <% else %>
      <%# ===== Empty state ===== %>
      <div class="text-center py-24">
        <svg class="mx-auto h-16 w-16 text-gray-300 mb-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1">
          <path stroke-linecap="round" stroke-linejoin="round" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
        </svg>
        <p class="text-lg text-gray-400 mb-6">まだ記事がありません</p>
        <%= link_to new_admin_blog_path,
              class: "inline-flex items-center gap-2 rounded-lg bg-blue-500 px-6 py-2.5 font-semibold text-white hover:bg-blue-600" do %>
          <svg class="h-5 w-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path stroke-linecap="round" stroke-linejoin="round" d="M12 4v16m8-8H4" />
          </svg>
          最初の記事を作成する
        <% end %>
      </div>
    <% end %>
  </div>
</div>
